<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/yue_person_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/yue_map_user" />

    <TextView
        android:id="@+id/yue_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yue_person_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#33FF00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/yue_person_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yue_person_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#CCCCCC"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/yue_person_content"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/yue_person_loc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="#CCCCCC"
        android:gravity="center"
        android:textSize="18sp" />
    

    <Button
        android:id="@+id/yue_person_yueta"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/yue_person_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="çº¦TA"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/yue_yueta" />

</RelativeLayout>